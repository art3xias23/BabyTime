<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BabyTime.Views.FinishActivityPage"
             Title="Finish Activity">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Finish Activity"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,20,0,0" />

        <Border BackgroundColor="#F0F0F0"
                Padding="15"
                Stroke="#E0E0E0"
                StrokeThickness="1">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>
            <VerticalStackLayout Spacing="10">
                <Label x:Name="ActivityInfoLabel"
                       FontSize="18"
                       HorizontalOptions="Center" />
                <Label x:Name="StartTimeLabel"
                       FontSize="16"
                       TextColor="Gray"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Border>

        <Label Text="Select End Time"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,20,0,0" />

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
            <Border Stroke="#007AFF"
                    StrokeThickness="2"
                    BackgroundColor="White"
                    Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout>
                    <Label Text="Hour"
                           HorizontalOptions="Center"
                           FontSize="12"
                           TextColor="Gray" />
                    <Picker x:Name="HourPicker"
                            WidthRequest="80"
                            FontSize="24"
                            TextColor="Black"
                            HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <Label Text=":"
                   FontSize="24"
                   VerticalOptions="Center" />

            <Border Stroke="#007AFF"
                    StrokeThickness="2"
                    BackgroundColor="White"
                    Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout>
                    <Label Text="Minutes"
                           HorizontalOptions="Center"
                           FontSize="12"
                           TextColor="Gray" />
                    <Picker x:Name="MinutePicker"
                            WidthRequest="80"
                            FontSize="24"
                            TextColor="Black"
                            HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>
        </HorizontalStackLayout>

        <VerticalStackLayout Spacing="15" Margin="0,30,0,0">
            <Button x:Name="SaveButton"
                    Text="Save End Time"
                    FontSize="18"
                    FontAttributes="Bold"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnSaveClicked" />

            <Button x:Name="CancelButton"
                    Text="Cancel"
                    FontSize="18"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnCancelClicked" />
        </VerticalStackLayout>

    </VerticalStackLayout>

</ContentPage>